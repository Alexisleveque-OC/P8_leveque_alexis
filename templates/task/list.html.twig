{% extends 'base.html.twig' %}

{% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">{% endblock %}

{% block body %}
    <a href="{{ path('task_create') }}" class="btn btn-info pull-right">Créer une tâche</a>
    <div class="row">
        {% for task in tasks %}
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="card">
                    <div class="card-title">
                        <h4 class="pull-right">
                            {% if task.isDone %}<span class="oi oi-check float-right"></span>{% else %}<span
                                    class="oi oi-x float-right"></span>{% endif %}
                        </h4>
                        <h4>
                            {{ task.title }}
                            {% if is_granted('TASK_EDIT', task) %}
                                <a href="{{ path('task_edit', {'id' : task.id }) }}" class="btn btn-secondary btn-sm"> Edit </a>
                            {% endif %}
                        </h4>
                    </div>
                    <div class="card-content">
                        <p>{{ task.content }}</p>
                    </div>
                    <div class="card-footer">
                        <p>Crée par :
                            <strong>
                                {% if task.user is null %}
                                    "anonyme"
                                {% else %}
                                    {{ task.user.username }}
                                {% endif %}
                            </strong>
                        </p>
                        <div>
                            <div class="row">
                            <form action="{{ path('task_toggle', {'id' : task.id }) }}">
                                <button class="btn btn-success btn-sm ">
                                    {% if is_granted('TASK_EDIT', task) %}
                                        {% if not task.isDone %}Marquer comme faite{% else %}Marquer non terminée{% endif %}
                                    {% endif %}
                                </button>
                            </form>
                            {% if is_granted('TASK_DELETE', task) %}
                                <form action="{{ path('task_delete', {'id' : task.id }) }}">
                                    <button class="btn btn-danger btn-sm ">Supprimer</button>
                                </form>
                            {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="alert alert-warning" role="alert">
                Il n'y a pas encore de tâche enregistrée. <a href="{{ path('task_create') }}"
                                                             class="btn btn-warning pull-right">Créer une tâche</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
